model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  limit       Limit?
  userId      Int
}

type Limit {
  amount     Float
  period     Period
}

model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  categoryId  String
  type        TransactionType
  amount      Float
  date        DateTime
  startDate   DateTime?
  endDate     DateTime?
  recurrence  Period?
  userId      Int
}

enum Period {
  monthly
  yearly
}

enum TransactionType {
  income
  expense
}
